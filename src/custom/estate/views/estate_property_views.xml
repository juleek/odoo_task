<?xml version="1.0"?>
<odoo>
    <record id="properties_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="properties_model_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="properties_model_tag" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>



    <record id="properties_model_view_tree" model="ir.ui.view">
        <field name="name">properties_model_view_tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="available_from"/>
                <field name="state"/>
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>


    <record id="properties_model_view_form" model="ir.ui.view">
        <field name="name">properties_model_view_form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sold_property" type="object" string="Sold"/>
                    <button name="cancel_property" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="state" string="Status"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="available_from"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="salesperson"/>
                                    <field name="buyer"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
